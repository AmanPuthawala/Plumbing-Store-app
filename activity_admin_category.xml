<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f0"
    tools:context=".AdminCategoryActivity">


    <ImageView
        android:id="@+id/te"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttonbackground"
        android:src="@drawable/te" />

    <ImageView
        android:id="@+id/nintydigryband"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/te"
        android:background="@drawable/buttonbackground"
        android:src="@drawable/nintydigryband" />


    <ImageView
        android:id="@+id/pipes"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/te"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttonbackground"
        android:src="@drawable/pipes" />


    <ImageView
        android:id="@+id/walve"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/rwalve"
        android:background="@drawable/buttonbackground"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/band"
        android:src="@drawable/walve" />

    <ImageView
        android:id="@+id/band"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/pipes"
        android:background="@drawable/buttonbackground"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/band" />

    <ImageView
        android:id="@+id/rwalve"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/nintydigryband"
        android:background="@drawable/buttonbackground"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/pipes"
        android:src="@drawable/rwalve" />

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        app:backgroundTint="#FF03DAC5"
        android:background="@drawable/edit_text_bg"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_bg"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:textAllCaps="false"
        app:backgroundTint="#FF03DAC5"
        />
</RelativeLayout>